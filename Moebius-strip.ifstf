@Name: MÃ¶bius-strip
@Version: 1.0
//Reference: https://en.wikipedia.org/wiki/M%C3%B6bius_strip

@add: 0
@v_mult: 1

float u = 2.0 * PI * random(next);
float v = -1.0 + 2.0 * random(next);
v *= @v_mult;
float a = 1.0 + v / 2.0 * cos(u / 2.0);
vec3 ms = vec3(
	a * cos(u),
	a * sin(u),
	v / 2.0 * sin(u / 2.0)
);
return mix(ms, p+ms, @add);